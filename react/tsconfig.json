{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noImplicitReturns": false,
    "jsx": "react",
    "noEmitOnError": false,
    "lib": [
      "dom", "dom.iterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "skipLibCheck": true
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}